{% extends "./base.html.twig" %}

{% block title %}
  {{ title }}
{% endblock %}

{% block stylesheets %}

  <link href="{{CDN('stylesheet')}}/demo-bundle/assets/css/layout.css" rel="stylesheet"/>
  <link href="{{CDN('stylesheet')}}/monitoring-bundle/vendors/dataTable/css/dataTables.bootstrap.min.css" rel="stylesheet"/>

{% endblock %}

{% block javascripts %}

  <script type="text/javascript" src="{{CDN('javascript')}}/demo-bundle/assets/js/layout.js"></script>
  <script type="text/javascript" src="{{CDN('javascript')}}/monitoring-bundle/vendors/dataTable/js/jquery.dataTables.js"></script>
  <script type="text/javascript" src="{{CDN('javascript')}}/monitoring-bundle/vendors/dataTable/js/dataTables.bootstrap.js"></script>

  <script>
    /* ---------------------------------------------- /*
		 * LANG IN URL CHANGE
		/* ---------------------------------------------- */
    $("#langs").bind("change", function() {
      window.location.href = "?lang=" + $(this).val();
    })
  </script>
{% endblock %}

{% block body %}
  <header class="header">
    {{ render( controller("demo-bundle:demo:nav", login ))}}
  </header>

  {% block footer %}
    <footer >
      {{ render( controller("demo-bundle:demo:footer" )) }}
    </footer>
  {% endblock %}
{% endblock %}
